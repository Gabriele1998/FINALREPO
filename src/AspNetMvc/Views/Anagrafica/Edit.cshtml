@model Models.Tabelle.Anagrafica

@{
    ViewData["Title"] = "Edit";
    ViewData["BreadCrum"] ="Modifica Anagrafica";
    ViewData["RootBreadCrum"] ="Anagrafiche";
}

<h2>Modifica Anagrafica</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnagraficaId" />
            <div class="form-group">
                <label asp-for="CodiceAnagrafica" class="control-label"></label>
                <input asp-for="CodiceAnagrafica" class="form-control" />
                <span asp-validation-for="CodiceAnagrafica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsAzienda" /> @Html.DisplayNameFor(model => model.IsAzienda)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RagioneSociale" class="control-label"></label>
                <input asp-for="RagioneSociale" class="form-control" />
                <span asp-validation-for="RagioneSociale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartitaIva" class="control-label"></label>
                <input asp-for="PartitaIva" class="form-control" />
                <span asp-validation-for="PartitaIva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodiceFiscale" class="control-label"></label>
                <input asp-for="CodiceFiscale" class="form-control" />
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAnagraficaId" class="control-label"></label>
                <select asp-for="TipoAnagraficaId" class="form-control" asp-items="ViewBag.TipoAnagraficaId"></select>
                <span asp-validation-for="TipoAnagraficaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva Modifiche" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><i class="fas fa-long-arrow-alt-left"></i>Indietro</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
