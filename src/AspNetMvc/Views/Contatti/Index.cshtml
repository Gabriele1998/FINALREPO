@model IEnumerable<Models.Tabelle.Contatti>

@{
    ViewData["Title"] = "Index";
    ViewData["BreadCrum"] ="Contatti";
    ViewData["RootBreadCrum"] ="Anagrafiche";

}

<h2 class="Domini">Contatti</h2>

<p>
    <a class="DominiGenerali" asp-action="Create">Clicca qui per inserire un nuovo contatto...</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anagrafica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoContatto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anagrafica.AnagraficaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoContatto.TipoContattoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContattiId"><i class="far fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.ContattiId"><i class="fas fa-info"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ContattiId"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
